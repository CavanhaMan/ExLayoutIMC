<?xml version="1.0" encoding="utf-8"?>
<!-- RODRIGO CAVANHAMAN -->
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.professorangoti.imc.MainActivity">

    <!-- PESO PADRAO -->
    <ImageView
        android:id="@+id/imagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="0"
        android:src="@drawable/images"
        android:textSize="15sp"
        android:visibility="visible" />

    <!-- ABAIXO DO PESO  -->
    <ImageView
        android:id="@+id/imagem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="0"
        android:src="@drawable/images1"
        android:textSize="15sp"
        android:visibility="invisible" />

    <!-- PESO NORMAL -->
    <ImageView
        android:id="@+id/imagem2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="0"
        android:src="@drawable/images2"
        android:textSize="15sp"
        android:visibility="invisible" />

    <!-- ACIMA DO PESO  -->
    <ImageView
        android:id="@+id/imagem3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="0"
        android:src="@drawable/images3"
        android:textSize="15sp"
        android:visibility="invisible" />

    <!-- PESO OBESO -->
    <ImageView
        android:id="@+id/imagem4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="0"
        android:src="@drawable/images4"
        android:textSize="15sp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe seu peso: "
        android:textSize="18sp"
        android:layout_weight="1"
        android:layout_row="1"
        android:layout_column="0"
        />

    <TextView
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe sua altura: "
        android:textSize="18sp"
        android:layout_weight="1"
        android:layout_row="2"
        android:layout_column="0"
        />
    <TextView
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_columnSpan="2"
        android:layout_weight="1"
        android:textAlignment="textStart"
        android:layout_row="2"
        android:layout_column="1"
        />

    <Button
        android:id="@+id/btcalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:background="#858585"
        android:fontFamily="monospace"
        android:layout_weight="1"
        android:text="CALCULAR"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />


<!-- O cálculo do IMC é feito
dividindo o peso (em quilogramas) pela altura (em metros) ao quadrado. -->
